@model IEnumerable<aspnetfirst.Models.Match>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Team_home)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team_guest)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.ScoreStatistic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Team_home.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team_guest.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.ScoreStatistic.Score)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MatchId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MatchId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MatchId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
