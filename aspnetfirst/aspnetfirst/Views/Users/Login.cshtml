@model aspnetfirst.Models.User
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<a asp-action="Register" asp-controller="Users">Регистрация</a>

<form asp-action="Login" asp-controller="Users" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="UserName">Введите Email</label>
            <input type="text" asp-for="UserName" />
            <span asp-validation-for="UserName" />
        </div>
        <div class="form-group">
            <label asp-for="UserPassword">Введите пароль</label>
            <input asp-for="UserPassword" />
            <span asp-validation-for="UserPassword" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
 
</form>