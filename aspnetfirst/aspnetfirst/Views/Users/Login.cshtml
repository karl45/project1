@model aspnetfirst.Models.User
@{
    ViewData["Title"] = "Login";
}


<div>
    <form asp-action="Login" asp-controller="Users"  asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div class="d-flex align-items-center justify-content-center" style="height:600px;">
            <div>
                <div class="form-group text-center">
                    <label class="col-form-label text-light" asp-for="UserName">Введите Email:</label>
                    <input type="text" class="form-control" asp-for="UserName" />
                    <span asp-validation-for="UserName" />
                </div>
                <div class="form-group text-center">
                    <label class="col-form-label text-light" asp-for="UserPassword">Введите пароль:</label>
                    <input type="password" class="form-control" asp-for="UserPassword" />
                    <span asp-validation-for="UserPassword" />
                </div>
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-outline-light" value="Войти" />
                </div>

            </div>
        </div>

    </form>
</div>
