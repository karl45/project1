@model IEnumerable<aspnetfirst.Models.Player>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<table class="table text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deffence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deffence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.TeamName)
            </td>
            <td>
                <a class="btn btn-outline-light" asp-action="Edit" asp-route-id="@item.PlayerId">Edit</a>
            </td>
            <td>
                <a class="btn btn-outline-light"  asp-action="Details" asp-route-id="@item.PlayerId">Details</a>
            </td>
            <td>
            <a  class="btn btn-outline-light" asp-action="Delete" asp-route-id="@item.PlayerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-outline-light" asp-action="Create">Создать игрока</a>