<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - aspnetfirst</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-transparent ">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">1XNET</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse ">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Players" asp-action="Index">Players</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Teams" asp-action="Index">Teams</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Users" asp-action="WatchUsers">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Leagues" asp-action="Index">Leagues</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Coaches" asp-action="Index">Coaches</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Matches" asp-action="Index">Matches</a>
                                </li>
                            </ul>
                            <form method="post" asp-controller="Users" asp-action="LogOut">
                                <input type="submit" class="btn btn-outline-light" value="Выход" />
                            </form>
                        }
                        else
                        {
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                </li>
                                <li class="nav-item">
                                </li>
                                <li class="nav-item">
                                </li>
                                <li class="nav-item">
                                </li>
                                <li class="nav-item">
                                </li>
                                <li class="nav-item">
                                </li>
                            </ul>
                            <form class="form-inline my-2 my-lg-0">
                                <a asp-action="Register" class="btn btn-outline-light" asp-controller="Users">Регистрация</a>
                            </form>
                        }
                    }


                </div>
              
            </div>
        </nav>
    </header>
            @RenderBody()

    <footer class="border-top footer text-muted text-center">
        <div class="container text-light">
            &copy; 2019 - 1XNET - <a class="text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
